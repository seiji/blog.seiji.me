\---
layout: default
title: Archives
\---
%div.archives-index.span9
  %article
    %h1 {{ page.title }}
    %div.archives
    %div.divider
    {% for month in page.months %}
    %div.row
      %div.span3
        %h2
          {{ month | date:"%B" }}
          %small {{ month | date:"%Y" }}
      %div.span5
        %ul
          {% for post in page.posts_by_month[month] %}
          %li
            %a{href: "{{ post.url }}"} {{ post.title | truncate:65 }}
            {% if post.categories and post.categories != empty %}
            %p.meta
              posted in
              {% for category in post.categories %}
              %a{href: "/categories/{{category | UrlEncode }}"}
                %u {{ category }}
              {% endfor %}
            {% endif %}

          {% endfor %}
    {% endfor %}
%aside.sidebar.span3
  {% include aside.html %}
