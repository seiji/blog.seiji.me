{% unless page.no_header %}
%header
  {% unless page.meta == false %}
  %p.meta
    {{ post.date | date_to_string }}
  {% endunless %}
  {% if index %}
  %h1.entry-title
    %a{href: "{{ root_url }}{{ post.url }}"}{% if site.titlecase %}{{ post.title | titlecase }}{% else %}{{ post.title }}{% endif %}
  {% else %}
  %h1.entry-title {% if site.titlecase %}{{ page.title | titlecase }}{% else %}{{ page.title }}{% endif %}
  {% endif %}
{% endunless %}

{% if index %}
%div.entry-content {{ content | excerpt }}
{% capture excerpted %}{{ content | has_excerpt }}{% endcapture %}
{% if excerpted == 'true' %}
%footer
  %a{href: "{{ root_url }}{{ post.url }}", rel: "full-article"}{{ site.excerpt_link }}
{% endif %}
{% else %}
%div.entry-content {{ content }}
{% endif %}

%div.divider
  
